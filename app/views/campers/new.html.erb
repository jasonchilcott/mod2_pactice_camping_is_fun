<h1>New Camper</h1>

<% if flash[:camper_errors] %>
    <% flash[:camper_errors].each do |e| %>
        <%= e %>
    <% end %>
<% end %>

<%= form_for @signup do |f| %>
<%= f.label :camper %>
<%= f.collection_select :camper_id, Camper.all, :id, :name %>
<%= f.label :activity %>
<%= f.collection_select :activity_id, Activity.all, :id, :name %>
<%= f.label :time %>
<%= f.number_field :time %>
<%= f.submit %>
<% end %>